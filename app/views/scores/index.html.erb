<div class='col-lg-6'>
  <h1>Resultados de <%=@scores.first.user.name.capitalize%></h1> 
</div>
<div class='col-lg-6'>
  <h3><%= link_to "Volver", results_path  %></h3> 
</div>

<div class="well">
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Puntos</th>
        <th>Comentario</th>
        <th>Predicci√≥n</th>
      </tr>
    </thead>

    <tbody>
      <% @scores.each do |score| %>
        <tr >
          <td><%= score.points %></td>
          <td><%= score.reason %></td>
          <td><%= "#{score.forecast.forecast1} - #{score.forecast.forecast2}"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>   
  <h2> <p>Total Puntos: <strong><%= Score.grab_sum_per_user(@scores.first.user_id)%></strong></p></h2>   
</div>