<div class='col-lg-6'>
  <h1>Resultados de <%=name%></h1> 
</div>
<div class='col-lg-6'>
  <h3><%= link_to "Volver", type_of_bet=="1" ? results_path : excel_path %></h3> 
</div>

<div class="well">
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Puntos</th>
        <th>Comentario</th>
        <th>Predicci√≥n</th>
      </tr>
    </thead>

    <tbody>
      <% @scores.each do |score| %>
        <tr >
          <td><span class="<%= 'badge' if score.points.to_i > 0%>"><%= score.points %></span></td>
          <td><%= score.reason %></td>
          <td><%= "#{score.forecast.forecast1} - #{score.forecast.forecast2}"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>   
  <h2> <p>Total Puntos: <strong><%= @scores.blank? ? 0 : Score.grab_sum_per_user(@scores.first.user_id,type_of_bet)%></strong></p></h2>   
</div>