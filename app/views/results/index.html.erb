<div class="well">
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Num</th>
        <th>Player</th>
        <th>Points</th>
      </tr>
    </thead>
    <tbody>
      <% @results.each_with_index do |r,i| %>
        <tr class=<%= "success" if i==0%>>

          <% @user = User.find(r[:id]) %>
          <td><%= i+1 %></td>
          <td><%= link_to "#{@user.name}", user_scores_path(@user)  %></td>
          <td><%= r[:Points] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>